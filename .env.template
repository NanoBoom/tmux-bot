# TmuxBot Environment Configuration Template
# Copy this file to .env and fill in your API keys

# =====================================================
# API Keys (Required)
# =====================================================

# OpenAI API Key (for GPT models)
OPENAI_API_KEY=sk-your-openai-api-key-here

# OpenRouter API Key (for multi-provider access)
OPENROUTER_API_KEY=sk-or-your-openrouter-api-key-here

# Anthropic API Key (for Claude models via direct access)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# =====================================================
# TmuxBot Core Configuration
# =====================================================

# Primary model to use (default: openai:gpt-4o)
TMUXBOT_MODEL=openai:gpt-4o

# Fallback models (comma-separated)
TMUXBOT_FALLBACK_MODELS=openai:gpt-4o-mini,openai:gpt-3.5-turbo

# Tmux socket name
TMUXBOT_SOCKET=tmuxbot

# Maximum conversation history
TMUXBOT_MAX_HISTORY=100

# API timeout in seconds
TMUXBOT_API_TIMEOUT=30

# Enable streaming responses (true/false)
TMUXBOT_STREAM_RESPONSES=true

# =====================================================
# Provider Configuration
# =====================================================

# Use OpenRouter for cost-effective access (true/false)
TMUXBOT_USE_OPENROUTER=false

# Environment (development/production/staging)
TMUXBOT_ENV=development

# =====================================================
# Advanced Configuration (Optional)
# =====================================================

# Enable cost optimization
TMUXBOT_COST_OPTIMIZATION=true

# Enable performance monitoring
TMUXBOT_PERFORMANCE_MONITORING=true

# Enable circuit breaker
TMUXBOT_CIRCUIT_BREAKER=true

# Daily cost limit in USD
TMUXBOT_DAILY_LIMIT_USD=50.0

# Per-request cost limit in USD
TMUXBOT_PER_REQUEST_LIMIT_USD=1.0

# Logging level (DEBUG/INFO/WARNING/ERROR)
TMUXBOT_LOG_LEVEL=INFO

# Log API requests (true/false)
TMUXBOT_LOG_REQUESTS=false

# Log API responses (true/false)
TMUXBOT_LOG_RESPONSES=false

# Log costs (true/false)
TMUXBOT_LOG_COSTS=true

# =====================================================
# Provider-Specific Configuration
# =====================================================

# OpenRouter App Name (for attribution)
OPENROUTER_APP_NAME=TmuxBot

# OpenRouter App URL (for attribution)
OPENROUTER_APP_URL=https://github.com/tmux-bot/tmux-bot

# =====================================================
# Usage Examples
# =====================================================

# Example 1: OpenAI only setup
# OPENAI_API_KEY=sk-your-key
# TMUXBOT_MODEL=openai:gpt-4o
# TMUXBOT_USE_OPENROUTER=false

# Example 2: OpenRouter for cost savings
# OPENROUTER_API_KEY=sk-or-your-key
# TMUXBOT_USE_OPENROUTER=true
# TMUXBOT_MODEL=gpt-4o
# TMUXBOT_COST_OPTIMIZATION=true

# Example 3: Development setup with debugging
# TMUXBOT_ENV=development
# TMUXBOT_LOG_LEVEL=DEBUG
# TMUXBOT_LOG_REQUESTS=true
# TMUXBOT_DAILY_LIMIT_USD=10.0

# Example 4: Production setup with monitoring
# TMUXBOT_ENV=production
# TMUXBOT_PERFORMANCE_MONITORING=true
# TMUXBOT_CIRCUIT_BREAKER=true
# TMUXBOT_DAILY_LIMIT_USD=100.0